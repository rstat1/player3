<layout name="Activation" options="nocache">
    <block style="bgcolor:rgba(40,40,40,255);valign:Center;halign:Fill;height:500px;">
        <img src="google-controller.png" style="width:96px;height:96px;valign:Center;halign:Center;margin:20px,0px,0px,0px" />
        <label text="Welcome, Player 3." style="fgcolor:rgba(255,255,255,255);valign:Center;halign:Center;font-size:24;margin:110px,0px,0px,0px"/>
        <textblock style="fgcolor:rgba(255,255,255,255);valign:Center;halign:Center;font-size:14;width:650px;margin:200px,0px,0px,0px" text="To continue, please visit https://player3.m.rdro.us, and login. If you don't have an account already click the Register link." />
        <textblock style="fgcolor:rgba(255,255,255,255);valign:Center;halign:Center;font-size:14;width:650px;margin:260px,0px,0px,0px" text="After registering you'll be directed to the Client Configuration page, where you can connect your Twitch account, and Steam Link to Player3." />
        <textblock style="fgcolor:rgba(255,255,255,255);valign:Center;halign:Center;font-size:14;width:650px;margin:320px,0px,0px,0px" text="The process of connecting your Steam Link will require a Device Name, which you'll find below in red letters." />
        <label text="{Binding: DeviceName}" style="fgcolor:rgba(168,61,62,255);font-size:28;halign:Center;valign:Center;margin:400px,0px,0px,0px" />
    </block>
</layout>